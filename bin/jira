use strict;
use warnings;

use feature 'say';
use experimental qw(signatures);

use FindBin;

use lib "$FindBin::Bin/../lib";

use JIRA      ();
use GetConfig ();

my $home = $ENV{HOME};
my $conf = "$ENV{HOME}/.jira";

my %opts = GetConfig::GetConfig($conf);

my $jira = JIRA->new(%opts);

my $caseID = 'ART-1928';

my $case = $jira->getIssue($caseID);

say "$caseID: $case->{fields}{summary}";
