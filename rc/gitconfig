[user]
  name = Andrew DeFaria
  email = Andrew@DeFaria.com

[pack]
  windowMemory=128m
  threads=1
  deltaCacheSize=128m

[core]
  pager = less -RX
  packedGitLimit=128m
  packedGitWindowSize=128m

[color]
  status=auto
  diff=auto
  branch=auto

# Currently these are restating the default
[color "branch"]
  current=green
  local=white
  remote=red

[color "diff"]
  external = /usr/local/bin/git-meld

[color "status"]
  added=yellow
  changed=green
  untracked=cyan

[alias]
  co=checkout
  ci=commit
  st=status
  br=branch
  hist=log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  type=cat-file -t
  dump=cat-file -p
  dlog=log --decorate

[push]
  default = simple
