[user]
	name = Andrew DeFaria
	email = Andrew@DeFaria.com

[pack]
  windowMemory=128m
  threads=1
  deltaCacheSize=128m

[core]
  pager = less -RX
  packedGitLimit=128m
  packedGitWindowSize=128m
  excludesfile = ~/.gitignore
	execludsfile = /root/.gitignore

[branch]
  autoSetupRemote = true

[color]
  branch=auto
  diff=auto
  status=auto
  showbranch=auto
  ui=true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[diff]
  tool = meld

[difftool]
  prompt = false

[difftool "meld"]
  cmd = meld "$LOCAL" "$REMOTE"

# Currently these are restating the default
[color "branch"]
  current=green
  local=white
  remote=red

[color "diff"]
  external = /bin/meld

[color "status"]
  added=yellow
  changed=green
  untracked=cyan

[alias]
  co=checkout
  ci=commit
  st=status
  br=branch
  aa = !git add . && git amend
  amend = !git log -n 1 --pretty=tformat:%s%n%n%b | git commit -F - --amend
  ls=show --pretty=format: --name-only
  hist=log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  type=cat-file -t
  dump=cat-file -p
  dlog=log --decorate
  oldest-ancestor = !bash -c 'diff -u <(git rev-list --first-parent "${1:-master}") <(git rev-list --first-parent "${2:-HEAD}") | sed -ne \"s/^ //p\" | head -1' -
  cplint = !PERL5LIB='' cplint --branched-from HEAD^ --skip CommitMessages -v warn
  cplintv = !PERL5LIB='' cplint --branched-from $(head -1 .branched_from) --skip CommitMessages -v warn

[push]
  default = current

[http]
  sslVerify = false
[credential]
  helper = store --file ~/.git-credentials
[pull]
  rebase = false
[fetch]
	prune = true
[merge]
  tool = meld
[mergetoo "meld"]
  cmd = meld "$LOCAL" "$BASE" "$REMOTE" --output "$MERGED"
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[gui]
	recentrepo = /opt/clearscm
[maintenance]
	repo = /opt/songbook.master
[safe]
	directory = /usr/local/googletalk
